extends layout

block content
  include headers/_index

  form(method="post" action="/judgeUser")

    h2 Sign Into Your Capital One Account

    div(class="form-group")
      label(for="email") Email:
      input(type="email" class="form-control" name="email" id="email")
    
    div(class="form-group")
      label(for="password") Password:
      input(type="password" class="form-control" name="password" id="password")

    div(class="form-group")
      select(id="cashortravel" name="cashortravel")
        option(value="cash") Cash Back
        option(value="travel") Travel Rewards


    .link-buttons
      button(class = "link-to-page" type="submit" class="btn btn-default") LogIn 
      h2 Or
      a(class = "link-to-page" href="customizeCard") Build your own card